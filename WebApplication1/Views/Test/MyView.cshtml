@model Employee
@using WebApplication1.Models;
@{
    Layout = null;
    //Employee emp = (Employee)ViewData["Employee"];
    //Employee emp = ViewBag.Employee;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MyView</title>
</head>
<body>
    <div> @*@((string)ViewData["greeting"])*@
        <h2>@Model.Name@ViewBag.greeting</h2>
        <div>
            <br>
            <b>员工信息</b><br>
            姓名：@Model.Name<br>
            工资：@Model.Salary.ToString("C")

            @{
                if (Model.Salary > 10000)
                {
                    <p>
                        土豪
                    </p>
                }
                else
                {
                    <p>
                        屌丝
                    </p>
                }
            }
        </div>
    </div>
</body>
</html>
